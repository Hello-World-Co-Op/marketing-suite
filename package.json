{
  "name": "@hello-world-co-op/marketing-suite",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Marketing website for Hello World Co-Op DAO - public landing pages, waitlist signup, and about content",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && tsx scripts/prerender.ts && tsx scripts/generate-sitemap.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint src --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "deploy": "dfx deploy"
  },
  "dependencies": {
    "@dfinity/agent": "^3.4.3",
    "@dfinity/candid": "^3.4.3",
    "@dfinity/principal": "^3.4.3",
    "@headlessui/react": "^2.2.9",
    "@hookform/resolvers": "^3.3.0",
    "@testing-library/dom": "^10.4.1",
    "clsx": "^2.1.0",
    "country-state-city": "^3.2.0",
    "highlight.js": "11.11.1",
    "i18next": "^23.0.0",
    "i18next-browser-languagedetector": "^7.0.0",
    "i18next-http-backend": "^2.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.50.0",
    "react-i18next": "^14.0.0",
    "react-router-dom": "^6.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.0.0",
    "@types/react": "^19.2.1",
    "@types/react-dom": "^19.2.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "globals": "^16.0.0",
    "jsdom": "^28.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.55.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "overrides": {
    "react-helmet-async": {
      "react": "$react"
    }
  }
}
